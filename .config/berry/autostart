#!/bin/bash

picom -b &
xsetroot -cursor_name left_ptr &
sxhkd -c $HOME/.config/berry/sxhkdrc &
$HOME/.config/polybar/launch.sh

# Set decoration geometry
berryc border_width       0
berryc inner_border_width 3
berryc title_height       30
berryc top_gap            30

# Set decoration colors
#berryc focus_color         292D3E
#berryc unfocus_color       292D3E
berryc inner_focus_color   $(echo "#f5eeeb" | tr -d "#")
berryc inner_unfocus_color $(echo "#f5eeeb" | tr -d "#")
berryc text_focus_color    $(echo "#7e705a" | tr -d "#")
berryc text_unfocus_color  $(echo "#d0c8c6" | tr -d "#")

# Other options
berryc smart_place "true"
berryc draw_text   "true"
berryc edge_lock   "true"
berryc set_font    "JetBrainsMono Nerd Font-9"
